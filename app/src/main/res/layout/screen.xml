<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mlq.yx.ScreenActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/main_vp_viewPager"
        android:layout_width="match_parent"
        android:layout_height="530dp">
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_below="@id/main_vp_viewPager"
        android:id="@+id/main_rg_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioButton
            android:text="易信"
            android:drawableTop="@drawable/chat"
            android:gravity="center"
            android:id="@+id/main_rb_yixin"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="发现"
            android:gravity="center"
            android:textColor="#000"
            android:drawableTop="@drawable/discover"
            android:id="@+id/main_rb_faxian"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/main_rb_pengbei"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="朋友"
            android:drawableTop="@drawable/friendd"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/main_rb_haoyou"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="我"
            android:textColor="#000"
            android:gravity="center"
            android:drawableTop="@drawable/me"
            android:id="@+id/main_rb_wo"
            android:layout_weight="1"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </RadioGroup>
</RelativeLayout>
