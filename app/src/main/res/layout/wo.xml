<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/me_rl_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/me_tv_name"
            android:text="深空"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/me_iv_star"
            android:layout_below="@id/me_tv_name"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/starlevel_star_3"
            android:layout_marginTop="8dp"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <TextView
            android:id="@+id/me_tv_ewm"
            android:text="查看我的二维码"
            android:layout_below="@id/me_iv_star"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:textColor="#2a2a2a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/me_tv_ewm"
            android:layout_alignLeft="@id/me_tv_ewm"
            android:background="#a9a9a9"
            android:layout_marginTop="16dp"
            android:layout_width="30dp"
            android:layout_height="1dp"/>
        <ImageView
            android:src="@mipmap/head"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/me_rl_use"
        android:layout_below="@id/me_rl_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/me_tv_use"
            android:text="通讯服务剩余用量"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/me_rl_time"
            android:layout_below="@id/me_tv_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="180"
                android:id="@+id/me_tv_time"
                android:textSize="25sp"
                android:textColor="#2a2a2a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="分钟"
                android:textSize="25sp"
                android:textColor="#2a2a2a"
                android:layout_toRightOf="@id/me_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/me_tv_time"
                android:textSize="10sp"
                android:textColor="#2a2a2a"
                android:text="易信电话"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/me_rl_msg"
            android:layout_alignTop="@id/me_rl_time"
            android:layout_toRightOf="@id/me_rl_time"
            android:layout_width="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="0"
                android:id="@+id/me_tv_msg"
                android:textSize="25sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="条"
                android:textSize="25sp"
                android:layout_toRightOf="@id/me_tv_msg"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/me_tv_msg"
                android:text="手机短信"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/me_rl_note"
            android:layout_alignTop="@id/me_rl_time"
            android:layout_toRightOf="@id/me_rl_msg"
            android:layout_width="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="15"
                android:id="@+id/me_tv_note"
                android:textSize="25sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="条/天"
                android:textSize="25sp"
                android:layout_toRightOf="@id/me_tv_note"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/me_tv_note"
                android:text="电话留言"
                android:textColor="@color/colorBlack"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/me_tv_shadow"
        android:layout_marginTop="16dp"
        android:layout_below="@id/me_rl_use"
       android:background="@color/colorWeakGray"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
        <RelativeLayout
            android:layout_below="@id/me_tv_shadow"
            android:id="@+id/me_rl_jiangLi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/me_iv_jiangLi"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/jiangli"
                android:layout_width="@dimen/fx_leftPic"
                android:layout_height="@dimen/fx_leftPic"/>
            <TextView
                android:text="奖励中心"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="17sp"
                android:layout_toRightOf="@id/me_iv_jiangLi"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fx_leftPic"/>
            <ImageView
                android:src="@mipmap/advance"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:background="#d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/me_rl_jiangLi"
                android:id="@+id/me_rl_qianbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/me_iv_qianbao"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/qianbao"
                    android:layout_width="@dimen/fx_leftPic"
                    android:layout_height="@dimen/fx_leftPic"/>
                <TextView
                    android:text="易信钱包"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/me_iv_qianbao"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fx_leftPic"/>
                <ImageView
                    android:src="@mipmap/advance"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:background="#d9d9d9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/me_rl_qianbao"
                android:id="@+id/me_rl_biaoqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/me_iv_biaoqing"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/biaoqing"
                    android:layout_width="@dimen/fx_leftPic"
                    android:layout_height="@dimen/fx_leftPic"/>
                <TextView
                    android:text="表情商店"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/me_iv_biaoqing"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fx_leftPic"/>
                <ImageView
                    android:src="@mipmap/advance"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:background="#d9d9d9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/me_rl_biaoqing"
                android:id="@+id/me_rl_shoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/me_iv_shoucang"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/shoucang"
                    android:layout_width="@dimen/fx_leftPic"
                    android:layout_height="@dimen/fx_leftPic"/>
                <TextView
                    android:text="我的收藏"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/me_iv_shoucang"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fx_leftPic"/>
                <ImageView
                    android:src="@mipmap/advance"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:background="#d9d9d9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/me_rl_shoucang"
                android:id="@+id/me_rl_renwu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/me_iv_renwu"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/viewholder_agenda_message_icon"
                    android:layout_width="@dimen/fx_leftPic"
                    android:layout_height="@dimen/fx_leftPic"/>
                <TextView
                    android:text="待办任务"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/me_iv_renwu"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fx_leftPic"/>
                <ImageView
                    android:src="@mipmap/advance"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:background="#d9d9d9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/me_tv_shadowTwo"
                android:layout_below="@id/me_rl_renwu"
                android:background="@color/colorWeakGray"
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
            <RelativeLayout
                android:layout_below="@id/me_tv_shadowTwo"
                android:id="@+id/me_rl_night"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/me_iv_night"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/moon"
                    android:layout_width="@dimen/fx_leftPic"
                    android:layout_height="@dimen/fx_leftPic"/>
                <TextView
                    android:text="夜间模式"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/me_iv_night"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fx_leftPic"/>
                <ImageView
                    android:src="@mipmap/advance"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:background="#d9d9d9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            <TextView
                android:background="@color/colorWeakGray"
                android:layout_below="@id/me_rl_night"
                android:id="@+id/me_tv_shadowThree"
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
            <RelativeLayout
                android:layout_below="@id/me_tv_shadowThree"
                android:id="@+id/me_rl_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/me_iv_settings"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/settings"
                    android:layout_width="@dimen/fx_leftPic"
                    android:layout_height="@dimen/fx_leftPic"/>
                <TextView
                    android:text="夜间模式"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/me_iv_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/fx_leftPic"/>
                <ImageView
                    android:src="@mipmap/advance"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_alignParentBottom="true"
                    android:background="#d9d9d9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>